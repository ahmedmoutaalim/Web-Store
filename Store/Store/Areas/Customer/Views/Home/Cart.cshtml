@using Store.Models
@model List<Products>
@{
    ViewData["Title"] = "Cart";
}

<h1>Your Cart</h1>

<br />

<div>
    <table class="table table-bordered">

        <thead>
            <tr>
                <th> Image</th>
                <th> Name</th>
                <th> Price</th>
                <th> Product Type</th>
                <th> Color</th>
                <th> </th>
               


            </tr>

        </thead>

        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>
                    <img src="~/@item.Image" width="200px" height="150px" />
                </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.productTypes.ProductType</td>
                <td>@item.productColor</td>
                <td>
                    <a asp-area="Customer" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>

    </table>
</div>

<div class="row">

    <div col-6>
        <a asp-controller="Home" asp-action="Index" class="btn btn-success"> Back to list</a>
    </div>

    <div class="col-6 text-right">
        <h3>Total Amount</h3>
        <h4>Grant Total : @Model.Sum(c => c.Price)</h4>
        <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">Process to checkout</a>
  
    </div>
     
</div>